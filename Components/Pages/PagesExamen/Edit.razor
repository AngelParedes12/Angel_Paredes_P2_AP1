@page "/ciudades/editar/{id:int}"
@inject CiudadService Servicio
@inject NavigationManager Navigation

@if (ciudad == null)
{
    <div class="alert alert-warning">Cargando...</div>
}
else
{
    <EditForm Model="@ciudad" OnValidSubmit="@Actualizar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group mb-3">
            <label>Nombre Ciudad:</label>
            <InputText @bind-Value="ciudad.Nombre" class="form-control" />
            <ValidationMessage For="@(() => ciudad.Nombre)" />
        </div>

        <h4 class="mt-4">Detalles</h4>

        @foreach (var detalle in ciudad.Detalles)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label>Fecha:</label>
                            <InputDate @bind-Value="detalle.Fecha" class="form-control" />
                            <ValidationMessage For="@(() => detalle.Fecha)" />
                        </div>

                        <div class="col-md-4">
                            <label>Asignatura:</label>
                            <InputText @bind-Value="detalle.Asignatura" class="form-control" />
                            <ValidationMessage For="@(() => detalle.Asignatura)" />
                        </div>

                        <div class="col-md-3">
                            <label>Monto:</label>
                            <InputNumber @bind-Value="detalle.Monto" class="form-control" />
                            <ValidationMessage For="@(() => detalle.Monto)" />
                        </div>

                        <div class="col-md-1 pt-4">
                            <button type="button" class="btn btn-danger"
                                    @onclick="() => RemoverDetalle(detalle)">
                                <i class="bi bi-x"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }

        <button type="button" class="btn btn-secondary mb-3" @onclick="AgregarDetalle">
            <i class="bi bi-plus-circle"></i> Agregar Detalle
        </button>

        <div class="alert alert-info">
            Total General: @ciudad.Detalles.Sum(d => d.Monto).ToString("C2")
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Actualizar
            </button>
            <a href="/ciudades" class="btn btn-secondary">Cancelar</a>
        </div>
    </EditForm>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Ciudad ciudad;

    protected override async Task OnInitializedAsync()
        => ciudad = await Servicio.GetCiudadConDetalles(Id) ?? new Ciudad();

    private void AgregarDetalle() => ciudad.Detalles.Add(new Detalle());
    private void RemoverDetalle(Detalle detalle) => ciudad.Detalles.Remove(detalle);

    private async Task Actualizar()
    {
        ciudad.MontoTotal = ciudad.Detalles.Sum(d => d.Monto);
        await Servicio.GuardarCiudadConDetalles(ciudad);
        Navigation.NavigateTo("/ciudades");
    }
}