@page "/ciudades"
@inject CiudadService Servicio
@inject NavigationManager Navigation
@inject IJSRuntime JS

<h3 class="mb-4">Registro de Ciudades</h3>

<button class="btn btn-success mb-3" @onclick="NuevaCiudad">
    <i class="bi bi-plus-circle"></i> Nueva Ciudad
</button>

@if (ciudades == null)
{
    <div class="alert alert-info">Cargando...</div>
}
else
{
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>Ciudad</th>
                <th>Total</th>
                <th>Proyecto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ciudad in ciudades)
            {
                <tr>
                    <td>@ciudad.Nombre</td>
                    <td>@ciudad.MontoTotal.ToString("C2")</td>
                    <td>@(ciudad.Proyectos.FirstOrDefault()?.Presupuesto.ToString("C2") ?? "Sin proyecto")</td>
                    <td>
                        <button class="btn btn-warning btn-sm" @onclick="() => Editar(ciudad.Id)">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-danger btn-sm ms-2" @onclick="() => Eliminar(ciudad.Id)">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Ciudad> ciudades;

    protected override async Task OnInitializedAsync() => await CargarDatos();

    private async Task CargarDatos() => ciudades = await Servicio.GetCiudadesConDetalles();

    private void NuevaCiudad() => Navigation.NavigateTo("/ciudades/nueva");
    private void Editar(int id) => Navigation.NavigateTo($"/ciudades/editar/{id}");

    private async Task Eliminar(int id)
    {
        bool confirmar = await JS.InvokeAsync<bool>("confirm", "¿Eliminar ciudad y todos sus registros?");
        if (confirmar)
        {
            await Servicio.EliminarCiudad(id);
            await CargarDatos();
        }
    }
}